rule "Bewegung im Haus Erdgeschoss wurde erkannt"
        when
                Item EG_EZ_Occu changed to ON
        then
                var local_time = java::util::Calendar::getInstance(TimeZone::getTimeZone("Europe/Berlin"))
                postUpdate(Occupancy, new DateTimeType(local_time))
end

rule "Bewegung im Haus Untergeschoss wurde erkannt"
        when
                Item Occu_Untergeschoss_Flur changed to ON
        then
                var local_time = java::util::Calendar::getInstance(TimeZone::getTimeZone("Europe/Berlin"))
                postUpdate(Occupancy_UG, new DateTimeType(local_time))
end


