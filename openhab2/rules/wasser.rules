rule "Wasser"
        when
        Time cron "0 * * * * ?" or
        System started
        then
        var Number Literh = Liter.deltaSince(now.minusDays(0).withTimeAtStartOfDay) 
        postUpdate(Tagesliter,Literh)
        var Number Jahresl = 0.0
        var Number Literr = Liter.state as DecimalType
        postUpdate(Jahresliter, Literr - Jahresl)
end


